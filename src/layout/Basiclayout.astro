---
const { title } = Astro.props;
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content="{Astro.generator}" />
    <title>{title}</title>
  </head>
  <body class="bg-gray-950 text-white">
    <section class=" flex gap-8" >
    <slot />
    </section>
  </body>
</html>